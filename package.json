{
  "name": "discord-bot",
  "version": "0.0.0",
  "description": "A discord bot for davis night market",
  "main": "run.js",
  "scripts": {
    "start": "NODE_ENV=prod pm2 start build/run.js --name crabapple",
    "stop": "pm2 stop crabapple",
    "start:jr": "NODE_ENV=test pm2 start build/run.js --name jr",
    "stop:jr": "pm2 stop jr",
    "dev": "DEBUG=* NODE_ENV=dev npm run watch",
    "test": "jest",
    "test:test": "NODE_ENV=test jest",
    "deploy:commands:test": "NODE_ENV=test ts-node src/deploy.ts",
    "deploy:commands:prod": "NODE_ENV=prod ts-node src/deploy.ts",
    "build": "tsc -p .",
    "watch": "tsc -w -p . & nodemon",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --fix --ext .ts",
    "postbuild": "cp -r ./src/message-md ./build/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier-format && npm run lint",
      "pre-push": ""
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davisnightmarket/discord-bot.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/davisnightmarket/discord-bot/issues"
  },
  "homepage": "https://github.com/davisnightmarket/discord-bot#readme",
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.480.0",
    "@types/node-cron": "^3.0.8",
    "bree": "^9.1.3",
    "debug": "^4.3.4",
    "discord.js": "^14.8.0",
    "dotenv": "16.0.3",
    "fuzzy-search": "^3.2.1",
    "google-auth-library": "8.7.0",
    "googleapis": "111.0.0",
    "handlebars": "^4.7.7",
    "node-cron": "^3.0.2",
    "pg": "^8.11.3",
    "pm2": "^5.3.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@google-cloud/secret-manager": "^4.2.1",
    "@types/dateformat": "^5.0.0",
    "@types/debug": "^4.1.7",
    "@types/fuzzy-search": "^2.1.2",
    "@types/handlebars": "^4.1.0",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.1",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^35.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "typescript": "^5.2.2"
  }
}
